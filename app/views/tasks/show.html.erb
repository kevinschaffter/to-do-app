<p id="notice"><%= notice %></p>


<div class="show">
  <p>
    <strong>Title:</strong>
    <%= @task.title %>
  </p>
  
  <p>
    <strong>Description:</strong>
    <%= @task.description %>
  </p>
  
  <p>
    <strong>Due date:</strong>
    <%= @task.due_date %>
  </p>
  
  <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-danger" %> |
  <%= link_to 'Back', tasks_path, class: "btn btn-success" %>
</div>